{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://raw.githubusercontent.com/jicarretero/Schemas.GUARD/main/disk-partition.json",
  "title": "Hard Disk device Schema",
  "description": "Common defintions to describe a disk",
  "definitions": {
      "disk-partition": {
          "type": "object",
          "properties": {
              "size": {
                  "type": "number"
              },
              "name": {
                  "type": "string"
              }
          }
      },
      "disk": {
          "type": "object",
          "properties": {
              "diskPartitions": {
                  "type": "array",
                  "items": {
                      "object": {
                          "size": {"type": "number"},
                          "name": {"type": "string"}
                      }
                  }
              },
              "name": {
                  "type": "string"
              },
              "size": {
                  "type": "number"
              },
              "id": {
                "$ref": "https://smart-data-models.github.io/data-models/common-schema.json#/definitions/EntityIdentifierType"
              }
          },
          "additionalProperties": false
      }
  }
}
